---
import { getCollection } from "astro:content";

const allPosts = await getCollection('blog');
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---
<nav class="tag-index">
    <h2>Tags</h2>
    <ul class="tags-list">
    {
      tags.map((tag) => (
        
          <li class="tag">
            <a href={`/Blog/tags/${tag}`}>{tag}</a>
          </li>
        
      ))
    }
    </ul>
</nav>

<style>
  .tags-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
  }
  .tag {
    padding-right: 1.5em;
  }
</style>
