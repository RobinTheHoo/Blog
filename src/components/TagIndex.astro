---
import { getCollection } from "astro:content";

const allPosts = await getCollection('blog');
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---
<nav class="tag-index">
    <h2>Tags</h2>
    
    {
        tags.map((tag) => (
          <ul class="tags-list">
            <li class="tag">
              <a href={`/Blog/tags/${tag}`}>{tag}</a>
            </li>
          </ul>
        ))
      }
</nav>

<style>
  .tags-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
  }
</style>
