---
const allPosts = await Astro.glob("../../content/blog/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---
<aside class="tag-index">
    {
        tags.map((tag) => (
          <p class="tag">
            <a href={`/tags/${tag}`}>{tag}</a>
          </p>
        ))
      }
</aside>