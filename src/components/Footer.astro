---
const today = new Date();
---

<footer>
	<div class="footer-margins">
		<p class="copyright">&copy; {today.getFullYear()} RobinTheHoo. All rights reserved.</p>
		<a href="/Blog/colophon">Colophon</a>
	</div>
</footer>
<style>
	footer {
		padding: 0.5em 1em;
		background: var(--background);
		color: var(--gray-1);
		text-align: center;	
		
		border-top: 1px solid var(--gray-1);
	}

	.footer-margins{
		margin: 0 20%;

		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
	}

	.copyright{
		margin:0;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin: 0;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
	}
	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}
</style>
